<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_layout_vertical_spacing_list_item">

        <TextView
            android:layout_height="match_parent"
            android:hint="@string/play_bar_current_song_text_view_placeholder"
            android:id="@+id/play_bar_current_song_text_view"
            android:layout_width="match_parent"
            android:gravity="center_vertical">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_layout_vertical_spacing_list_item">

        <Button
            android:layout_width="@dimen/material_icon_clickable_area"
            android:layout_height="@dimen/material_icon_clickable_area"
            android:background="@drawable/ic_skip_previous"
            android:id="@+id/play_bar_skip_previous_button"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/material_icon_clickable_area"
            android:layout_height="@dimen/material_icon_clickable_area"
            android:id="@+id/play_bar_play_button"
            android:background="@drawable/ic_play"
            android:layout_gravity="center_vertical" />


        <Button
            android:layout_width="@dimen/material_icon_clickable_area"
            android:layout_height="@dimen/material_icon_clickable_area"
            android:background="@drawable/ic_skip_next"
            android:id="@+id/play_bar_skip_next_button"
            android:layout_gravity="center_vertical"
            />

        <Button
            android:layout_width="@dimen/material_icon_clickable_area"
            android:layout_height="@dimen/material_icon_clickable_area"
            android:background="@drawable/ic_shuffle"
            android:id="@+id/play_bar_shuffle_button"
            android:layout_gravity="center_vertical"
            />

        <Button
            android:layout_width="@dimen/material_icon_clickable_area"
            android:layout_height="@dimen/material_icon_clickable_area"
            android:background="@drawable/ic_repeat"
            android:id="@+id/play_bar_repeat_button"
            android:layout_gravity="center_vertical"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/play_bar_seek_bar"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>